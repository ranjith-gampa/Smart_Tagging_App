<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example2.parth.smart_tagging">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AdminLogInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminSignUpActivity"
            android:label="@string/title_activity_admin_sign_up"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".AdminHomeActivity"
            android:label="@string/title_activity_admin_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".AdminForgotCredentialsActivity"
            android:label="@string/title_activity_admin_forgot_credentials"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".UsersHomeActivity"
            android:label="@string/title_activity_users_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <service android:name=".UsersLoginService"/>

        <activity
            android:name=".AdminListUsersActivity"
            android:label="@string/title_activity_admin_list_users"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".AdminCreateUserActivity"
            android:label="@string/title_activity_admin_create_user"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".ApplicationLogoutActivity"
            android:label="@string/title_activity_application_logout"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".ViewTagLogsActivity"
            android:label="@string/title_activity_view_tag_logs"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".UpdatePasswordActivity"
            android:label="@string/title_activity_update_password"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".AdminUserDetailsActivity"
            android:label="@string/title_activity_admin_user_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".SendMessageActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">

        </activity>
        <activity
            android:name=".AdminUserDetailsUpdateActivity"
            android:label="@string/title_activity_admin_user_details_update"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".NfcReadActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".NfcWriteActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".NfcCreateTag"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
    </application>

</manifest>
